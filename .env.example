# Trinity Agent Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# Security - Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production

# Admin credentials for development mode login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# Anthropic API Key - Required for agents to use Claude
ANTHROPIC_API_KEY=sk-ant-your-api-key

# ===========================================
# AUTHENTICATION SETTINGS
# ===========================================

# Development Mode - Set to "true" for local username/password login
# Set to "false" for production Auth0-only authentication
DEV_MODE_ENABLED=true

# Auth0 Configuration (Required if DEV_MODE_ENABLED=false)
# Create an Auth0 application at https://auth0.com
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_ALLOWED_DOMAIN=your-company.com  # Leave empty to allow all domains

# ===========================================
# CORS ORIGINS
# ===========================================

# Additional CORS origins (comma-separated)
# Add your production domains here
EXTRA_CORS_ORIGINS=https://your-domain.com,http://your-domain.com

# ===========================================
# OAUTH PROVIDERS (Optional)
# ===========================================

# Google OAuth (for Google Workspace MCP)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Slack OAuth (for Slack MCP)
# Get from: https://api.slack.com/apps
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# GitHub OAuth (for GitHub MCP)
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Notion OAuth (for Notion MCP)
# Get from: https://www.notion.so/my-integrations
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=

# ===========================================
# SERVICE URLS (Usually no need to change)
# ===========================================

REDIS_URL=redis://redis:6379
AUDIT_URL=http://audit-logger:8001
BACKEND_URL=http://localhost:8000
